//THINGS CONFIG

//LIRC BRIDGE - Lirc Binding required
Bridge lirc:bridge:local [ host="10.10.10.123", port="8765" ] {
    Thing remote LGA [ remote="LGA" ]
    Thing remote FAN [ remote="FAN" ]
    Thing remote SAUGER [ remote="SAUGER" ]
}

