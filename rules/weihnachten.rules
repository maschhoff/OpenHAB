//Regel f√ºr Weihnachten - Fernsehr an mit Musik + Lichter an 

rule "Play Chrismas_Switch Rule"
when Item Chrismas_Switch received update
then
if(Chrismas_Switch.state==ON){
	logInfo("weihnachten.rules","Chrismas Switch ON")
    sendCommand(Switch3, "on")
    sendCommand(Switch1, "on")
    sendCommand(DeskLamp, "on")
    CastLRTV_URI.sendCommand("http://de-hz-fal-stream05.rautemusik.fm/christmas")
    //Remote_TV.sendCommand("KEY_POWER")
	Fernseher_Fernbedienung.sendCommand(PLAY)
}else{ 
	logInfo("weihnachten.rules","Chrismas Switch OFF")
	sendCommand(Switch3, "off")
	sendCommand(Switch1, "off")
	sendCommand(DeskLamp, "off")
    Fernseher_Fernbedienung.sendCommand(STOP) 
	//hisense.sendCommand(on)
	Remote_TV.sendCommand("KEY_POWER")
}
end


// Zeitschaltungen

rule "Zeitschaltung_Weihnachtsbeleuchtung_an" // Um 17:10 Uhr Lichter anmachen
when Time cron "0 0/27 16 * * ?" // http://www.quartz-scheduler.org/documentation/quartz-2.x/tutorials/crontrigger.html
then
logInfo("weihnachten.rules","Zeitschaltung Weihnachten ON")
sendCommand(DeskLamp, "on")
//sendCommand(Switch1, "on")
sendCommand(Switch3, "on")
end

rule "Zeitschaltung_Weihnachtsbeleuchtung_aus"
when Time cron "0 0/29 22 * * ?" // http://www.quartz-scheduler.org/documentation/quartz-2.x/tutorials/crontrigger.html
then
sendCommand(DeskLamp, "off")
//sendCommand(Switch1, "off")
sendCommand(Switch3, "off")
end
